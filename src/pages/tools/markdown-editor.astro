        : 'rounded-lg p-4 text-sm text-center border border-red-900/30 bg-red-950/20 text-red-200'
      statusMessage.classList.remove('hidden')

      setTimeout(() => {
        statusMessage.classList.add('hidden')
      }, 2000)
