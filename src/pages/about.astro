const SKILLS = [
  'Community Building',
  'Product Design',
  'Web Development',
  'System Design',
  'Python',
  'Discord.py',
  'React / Next.js',
  'Astro',
  'Figma',
  'Digital Marketing'
]
---

<BaseLayout>
  <SEO 
    slot='seo' 
    title='About Me' 
    description='Building Tenacity. Founding President at DevSphere. Tech Enthusiast.' 
  />

  <div class='relative mx-auto max-w-3xl px-6 py-24'>
    <!-- Back Button -->
    <div 
      class='absolute left-6 top-6 md:-left-4 md:top-8'
      transition:animate={getCustomTransition(0)}
    >
      <BackToHome />
    </div>

    <!-- Background Glow -->
    <div
      class:list={[
        '-z-10 h-64 w-64 rounded-full bg-primary-gradient opacity-10 blur-[100px]',
        'absolute right-0 top-0 translate-x-1/3'
      ]}
    >
    </div>

    <!-- Header -->
    <header class='mb-20 pt-16'>
      <h1 
        class='mb-8 text-5xl font-bold tracking-tight text-white md:text-6xl'
        transition:animate={getCustomTransition(0.1)}
      >
        About <span class='text-zinc-500'>Me</span>
      </h1>
      
      <div 
        class='prose prose-zinc prose-invert max-w-none'
        transition:animate={getCustomTransition(0.2)}
      >
        <p class='text-xl leading-relaxed text-zinc-300'>
          Hi, I'm <strong class='text-emerald-400'>Taufeeq Riyaz</strong>. I'm a builder and community leader passionate about empowering others.
        </p>
        <p class='text-zinc-400'>
          Currently, I'm building <strong class='text-zinc-200'>Tenacity</strong>, a community where students can discover their passions and develop skills. I also served as the Founding President of <strong class='text-zinc-200'>DevSphere</strong>. I love working at the intersection of technology, design, and people.
        </p>
      </div>
    </header>

    <!-- Skills -->
    <section class='mb-20'>
      <h2 
        class='mb-8 text-2xl font-semibold text-zinc-100'
        transition:animate={getCustomTransition(0.3)}
      >
        Skills & Interests
      </h2>
      <div 
        class='flex flex-wrap gap-3'
        transition:animate={getCustomTransition(0.35)}
      >
        {SKILLS.map((skill) => (
          <div class='rounded-full border border-zinc-800 bg-zinc-900/50 px-4 py-2 text-sm text-zinc-300 transition-colors hover:border-emerald-500/30 hover:text-emerald-400'>
            {skill}
          </div>
        ))}
      </div>
    </section>

    <!-- Experience -->
    <section class='mb-20'>
      <h2 
        class='mb-8 text-2xl font-semibold text-zinc-100'
        transition:animate={getCustomTransition(0.4)}
      >
        Experience
      </h2>
      <div class='space-y-12'>
        {EXPERIENCE.map((companyData, index) => (
          <div 
            class='group relative'
            transition:animate={getCustomTransition(0.4 + (index * 0.05))}
          >
            <div class='flex gap-4 mb-6'>
              <div class='flex-shrink-0'>
                <img 
                  src={companyData.logoUrl} 
                  alt={`${companyData.company} logo`}
                  class='h-12 w-12 rounded-lg border border-zinc-800 bg-zinc-900 object-cover'
                />
              </div>
              <div>
                <h3 class='text-xl font-semibold text-white'>{companyData.company}</h3>
                {companyData.location && <p class='text-sm text-zinc-500'>{companyData.location}</p>}
              </div>
            </div>

            <div class='relative ml-[23px] space-y-8 border-l border-zinc-800 pl-8'>
              {companyData.roles.map((role, roleIndex) => (
                <div class='relative'>
                  <span class='absolute -left-[37px] top-1.5 h-3 w-3 rounded-full border-2 border-zinc-950 bg-zinc-700 transition-colors group-hover:bg-emerald-500 group-hover:border-emerald-900'></span>
                  
                  <div class='flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2'>
                    <h4 class='text-lg font-medium text-zinc-200'>{role.title}</h4>
                    <span class='text-sm text-zinc-500 shrink-0'>{role.period}</span>
                  </div>
                  
                  <div class='text-zinc-400 leading-relaxed text-sm space-y-4'>
                    {role.description.split('\n\n').map(paragraph => (
                      <p>{paragraph}</p>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Connect -->
    <section>
      <h2 
        class='mb-8 text-2xl font-semibold text-zinc-100'
        transition:animate={getCustomTransition(0.5)}
      >
        Connect
      </h2>
      <p 
        class='mb-8 text-zinc-400'
        transition:animate={getCustomTransition(0.55)}
      >
        I'm always open to discussing new projects, community initiatives, or just chatting about tech.
      </p>
      
      <div 
        class='flex gap-4'
        transition:animate={getCustomTransition(0.6)}
      >
        <a 
          href='https://linkedin.com/in/taufeeq' 
          target='_blank'
          class='flex items-center gap-2 rounded-lg border border-zinc-800 bg-zinc-900/50 px-4 py-2 text-zinc-400 transition-all hover:border-zinc-700 hover:text-white hover:shadow-lg'
        >
          LinkedIn
        </a>
        <a 
          href='mailto:contact.taufeeq@gmail.com' 
          class='flex items-center gap-2 rounded-lg border border-zinc-800 bg-zinc-900/50 px-4 py-2 text-zinc-400 transition-all hover:border-zinc-700 hover:text-white hover:shadow-lg'
        >
          Email Me
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
